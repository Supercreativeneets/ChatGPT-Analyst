import pandas as pd
import matplotlib.pyplot as plt

# Load data from CSV file
df = pd.read_csv('iris.csv')

# Check the first few rows of the dataframe to understand its structure
print(df.head())

# Count occurrences of each type of flower
flower_counts = df['species'].value_counts()

# Create a bar graph of the types of flowers
plt.figure(figsize=(8, 6))
flower_counts.plot(kind='bar', color='skyblue')
plt.title('Types of Flowers in the Iris Dataset')
plt.xlabel('Flower Type')
plt.ylabel('Count')
plt.xticks(rotation=45)
plt.tight_layout()

# Save the plot as 'output.png'
plt.savefig('output.png')
print("Bar graph of flower types saved as 'output.png'.")
